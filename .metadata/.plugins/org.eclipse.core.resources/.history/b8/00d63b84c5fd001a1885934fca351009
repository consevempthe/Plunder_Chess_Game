package client;

import static org.junit.jupiter.api.Assertions.*;

import java.io.IOException;

import org.junit.BeforeClass;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import server.Server;

class TestClient {

	Client client;
	Server server;
	@BeforeClass
	void setUpServer() {
		server = new Server(8188);
		server.start();
	}
	
	@BeforeEach
	void setUp() {
		
		if(!serverSet) {
			server.start();
			serverSet = true;
		}
		client = new Client("localhost", 8188);
	}
	
	@Test
	void testInitialValues() {
		assertEquals("localhost", client.getServerName());
		assertEquals(8188, client.getServerPort());
	}
	
	@Test
	void testConnectionSucceed() {
		boolean connected = client.connect();
		assertEquals(true, connected, "Should properly connect.");
	}

	@Test
	void testConnectionFailed() {
		client = new Client("localhost", 8888);
		boolean connected = client.connect();
		assertEquals(false, connected, "Should fail to properly connect.");
	}
	
	@Test
	void testResponseWithNothing() throws IOException {
		assertThrows(NullPointerException.class, ()->client.response(), "Expect Null pointer.");
	}
	
	@Test
	void testResponseWithSomething() throws IOException {
		Server server1 = new Server(8888);
		Client client1 = new Client("localhost", 8888);
		server1.getWorkerList().get(0).getOutputStream().write("Hello\n".getBytes());
		String response = client1.response();
		assertEquals("Hello\n", response, "Should get a response from the outputstream of the ServerWorker.");
	}
	
}
